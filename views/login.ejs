<!-- login.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hoa Vân | Đăng nhập</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container mt-4">
    <h2 class="mb-4">Đăng nhập</h2>
    <form id="loginForm" action="/users/login" method="POST" onsubmit="return validateForm();">
      <div id="error-message" class="alert alert-danger d-none"></div>
      <% if(errorMessage) { %>
        <div class="alert alert-danger">
          <%= errorMessage %>
        </div>
        <% } %>
          <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Mật khẩu:</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div><br>
          <button type="submit" class="btn btn-primary">Đăng nhập</button>
    </form><br>
    <p>Chưa có tài khoản, hãy bấm vào <a href="./register" style="text-decoration: none;">đây</a>.</p>

  </div>


  <script>
    function validateForm() {
      var email = document.getElementById('email').value;
      var password = document.getElementById('password').value;

      if (email.trim() === '' || password.trim() === '') {
        document.getElementById('error-message').innerText = 'Vui lòng nhập đầy đủ thông tin.';
        document.getElementById('error-message').classList.remove('d-none');
        return false;
      }
      return true;
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>